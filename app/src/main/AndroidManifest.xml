<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kanjistudy">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/kanji_study_app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".views.loginProcess.MainActivity"
            android:theme="@style/AppTheme.Launcher">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".views.KanjiMenuActivity" />
        <activity android:name=".views.vocabularyViews.KanjiActivity" />
        <activity android:name=".views.vocabularyViews.KanaActivity" />
        <activity android:name=".views.HeaderDrawer" />
        <activity android:name=".views.loginProcess.LoginActivity" />
        <activity android:name=".views.loginProcess.RegisterActivity" />
        <activity android:name=".views.quiz.QuizMenu" />
        <activity android:name=".views.quiz.QuizActivity"/>
    </application>

</manifest>