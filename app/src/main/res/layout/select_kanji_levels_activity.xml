<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlue"
    android:gravity="center">


    <TextView
        android:id="@+id/titleSectionSelectOptionsTextView"
        style="@style/textStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose Kanji Level"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.060000002" />

    <TextView
        android:id="@+id/kanjiLevelOneSelectOptionsTextView"
        android:layout_width="300dp"
        android:layout_height="50dp"

        android:layout_marginTop="32dp"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:text="Level 1"
        android:textSize="29dp"

        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"


        app:layout_constraintTop_toBottomOf="@+id/titleSectionSelectOptionsTextView" />

    <TextView
        android:id="@+id/kanjiLevelTwoSelectOptionsTextView"
        android:layout_width="300dp"
        android:layout_height="50dp"

        android:layout_marginTop="32dp"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:text="Level 2"
        android:textSize="29dp"

        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"


        app:layout_constraintTop_toBottomOf="@+id/kanjiLevelOneSelectOptionsTextView" />

    <TextView
        android:id="@+id/kanjiLevelThreeSelectOptionsTextView"
        android:layout_width="300dp"
        android:layout_height="50dp"

        android:layout_marginTop="32dp"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:text="Level 3"
        android:textSize="29dp"

        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"


        app:layout_constraintTop_toBottomOf="@+id/kanjiLevelTwoSelectOptionsTextView" />

    <TextView
        android:id="@+id/kanjiLevelFourSelectOptionsTextView"
        android:layout_width="300dp"
        android:layout_height="50dp"

        android:layout_marginTop="32dp"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:text="Level 4"
        android:textSize="29dp"

        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"


        app:layout_constraintTop_toBottomOf="@+id/kanjiLevelThreeSelectOptionsTextView" />

    <TextView
        android:id="@+id/kanjiLevelFiveSelectOptionsTextView"
        android:layout_width="300dp"
        android:layout_height="50dp"

        android:layout_marginTop="32dp"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:text="Level 5"
        android:textSize="29dp"

        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"


        app:layout_constraintTop_toBottomOf="@+id/kanjiLevelFourSelectOptionsTextView" />

    <TextView
        android:id="@+id/kanjiLevelSixSelectOptionsTextView"
        android:layout_width="300dp"
        android:layout_height="50dp"

        android:layout_marginTop="32dp"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:text="Level 6"
        android:textSize="29dp"

        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"


        app:layout_constraintTop_toBottomOf="@+id/kanjiLevelFiveSelectOptionsTextView" />


    <TextView
        android:id="@+id/kanaSelectOptionsTextView"
        style="@style/textStyle"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="72dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="Switch to Hiragana and katakana"

        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"


        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kanjiLevelSixSelectOptionsTextView" />


</androidx.constraintlayout.widget.ConstraintLayout>
