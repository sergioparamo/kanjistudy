<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlue"
    android:gravity="center"

    app:menu="@menu/navigation_drawer">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBarKanjiMenu"
        style="@style/Widget.MaterialComponents.Toolbar.Primary"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorAccent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:menu="@menu/kana_menu"
        app:navigationIcon="@drawable/ic_baseline_menu_24">

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/textStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foregroundGravity="center"
            android:src="@drawable/twitter_logo_blue"
            android:text="Kanji Study"
            android:textAlignment="center" />
    </com.google.android.material.appbar.MaterialToolbar>


    <TextView

        android:id="@+id/titleSectionSelectOptionsTextView"
        style="@style/textStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="612dp"

        android:text="Choose Level"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topAppBarMain"
        app:layout_constraintVertical_bias="0.052" />

    <TextView
        android:id="@+id/kanjiLevelOneSelectOptionsTextView"
        style="@style/ItemsStyle"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="Level 1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"


        app:layout_constraintTop_toBottomOf="@+id/titleSectionSelectOptionsTextView" />

    <TextView
        android:id="@+id/kanjiLevelTwoSelectOptionsTextView"
        style="@style/ItemsStyle"
        android:layout_width="300dp"
        android:layout_height="60dp"

        android:gravity="center_horizontal"
        android:text="Level 2"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"


        app:layout_constraintTop_toBottomOf="@+id/kanjiLevelOneSelectOptionsTextView" />

    <TextView
        android:id="@+id/kanjiLevelThreeSelectOptionsTextView"
        style="@style/ItemsStyle"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="Level 3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"


        app:layout_constraintTop_toBottomOf="@+id/kanjiLevelTwoSelectOptionsTextView" />

    <TextView
        android:id="@+id/kanjiLevelFourSelectOptionsTextView"
        style="@style/ItemsStyle"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="Level 4"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"


        app:layout_constraintTop_toBottomOf="@+id/kanjiLevelThreeSelectOptionsTextView" />

    <TextView
        android:id="@+id/kanjiLevelFiveSelectOptionsTextView"
        style="@style/ItemsStyle"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="Level 5"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"


        app:layout_constraintTop_toBottomOf="@+id/kanjiLevelFourSelectOptionsTextView" />

    <TextView
        android:id="@+id/kanjiLevelSixSelectOptionsTextView"
        style="@style/ItemsStyle"
        android:layout_width="300dp"

        android:layout_height="60dp"
        android:gravity="center"
        android:text="Level 6"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"


        app:layout_constraintTop_toBottomOf="@+id/kanjiLevelFiveSelectOptionsTextView" />

    <TextView
        android:id="@+id/kanjiLevelSevenSelectOptionsTextView"
        style="@style/ItemsStyle"
        android:layout_width="300dp"

        android:layout_height="60dp"
        android:gravity="center"
        android:text="Level 7"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"


        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kanjiLevelSixSelectOptionsTextView"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>
