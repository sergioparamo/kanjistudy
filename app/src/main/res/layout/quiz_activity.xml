<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlue"
    android:orientation="vertical"
    tools:context=".views.quiz.QuizActivity"

    >

    <TextView
        android:id="@+id/welcomeTextViewMain"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="Kanji Study Quiz"
        android:textAlignment="center"


        android:textColor="@color/colorWhite"

        android:textSize="35dp"


        android:textStyle="bold"


        />

    <TextView
        android:id="@+id/questionTextView"
        style="@style/ItemsStyle"
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:layout_below="@+id/welcomeTextViewMain"
        android:layout_gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="23dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:text="Meaning of é›¨"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/simpleProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"

        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="330dp"
        android:background="@color/colorWhite"
        android:max="100"
        android:orientation="horizontal"
        android:progress="10" />

    <TextView
        android:id="@+id/progressText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="370dp"
        android:orientation="vertical"
        android:text="Question 1 of 10"
        android:textColor="@color/colorWhite"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"


        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/trueButtonQuiz"
        style="@style/ButtonStyle"
        android:layout_width="170dp"
        android:layout_height="60dp"

        android:layout_marginStart="120dp"
        android:layout_marginTop="420dp"

        android:orientation="horizontal"
        android:text="True"


        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/falseButtonQuiz"
        style="@style/ButtonStyle"
        android:layout_width="170dp"
        android:layout_height="60dp"

        android:layout_marginStart="120dp"
        android:layout_marginTop="490dp"

        android:orientation="horizontal"
        android:text="False"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/leaveQuizButton"
        style="@style/ButtonStyle"
        android:layout_width="170dp"
        android:layout_height="60dp"

        android:layout_below="@+id/falseButtonQuiz"
        android:layout_marginStart="120dp"

        android:layout_marginTop="14dp"
        android:orientation="horizontal"
        android:text="Return"

        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        app:layout_constraintTop_toTopOf="parent" />


</RelativeLayout>