<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"

    android:background="@drawable/back"
    android:layout_marginTop="10dp"





    >

    <TextView
        android:id="@+id/kana_textview_id"
        style="@style/ItemsStyle"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_gravity="left"
        android:hint="Kana"
        android:paddingTop="15dp"
        android:textAlignment="center"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.027"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/kana_romaji_id"
        style="@style/ItemsStyle"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_gravity="left"
        android:hint="Romaji"
        android:paddingTop="15dp"
        android:textAlignment="center"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/kana_textview_id"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="RtlCompat" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/kana_sound_id"


        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/speaker"


        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/kana_textview_id"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
