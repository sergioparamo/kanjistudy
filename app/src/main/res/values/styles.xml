<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorWhite</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>


    <style name="textStyle">
        <item name="fontFamily">verdana</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="background">@color/colorBlack</item>
    </style>

    <style name="ItemsStyle">
        <item name="android:textSize">35dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:foreground">@drawable/custom_ripple_effect</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="background">@color/colorBlack</item>

    </style>

    <style name="ButtonStyle">
        <item name="android:textSize">25dp</item>
        <item name="android:textStyle">bold</item>

        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="color">@color/colorBlack</item>


    </style>

    <style name="ItemsStyleBorder">
        <item name="android:background">@drawable/border</item>
        <item name="android:textSize">30dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:foreground">@drawable/custom_ripple_effect</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textColor">@color/colorWhite</item>


    </style>

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <style name="textInputEditText">
        <item name="android:background">#4000</item>
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="textInputLayoutStyle">
        <item name="android:textColorHint">#fff</item>
    </style>



</resources>